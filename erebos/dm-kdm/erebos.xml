<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!-- aptosid 2008-02 erebos KDM theme -->
<greeter>
	<style font="Sans 9" window-text-color="#ffffff"
	       alpha="0" base-color="#ffffff" alternate-base-color="#ffffff"
	       text-color="#000000" disabled-text-color="#808080" />
	
	<!-- background texture -->
 	<item type="pixmap" id="background"  background="true">
		<normal file="background.png"/>
		<pos anchor="nw" x="0" y="0" width="100%" height="100%"/>
	</item>

	<!-- welcome text -->
	<item type="rect" id="welcome_text">
		<pos anchor="nw" x="50%" y="45%" width="box" height="box"/>
		<box orientation="vertical">
			<!-- welcome on ... -->
			<item type="label">
				<pos anchor="s" />
				<normal color="#ffffff" font="Verdana 18"/>
				<stock type="welcome-label"/>
			</item>
			<!-- clock & date -->
			<item type="label" id="clock">
				<pos anchor="n" />
				<normal color="#ffffff" font="Sans 15"/>
				<text>%c</text>
			</item>
		</box>
	</item>

	<!-- aptosid logo -->
	<item type="pixmap" id="aptosid-logo">
		<normal file="aptosid-logo.png" />
		<pos anchor="se" x="-50" y="90%" />
	</item>

	<!-- top box -->
	<item type="rect" id="topbox">
		<normal color="#eeeeee" alpha="0.2"/>
		<pos x="0" y="0" anchor="nw" width="100%" height="40" />
		<!-- login fields -->
		<box orientation="horizontal" spacing="5" xpadding="10">
			<!-- user name -->
			<item type="label">
				<pos anchor="cw" x="0" y="50%"/>
				<normal color="#ffffff" font="Sans 12"/>
				<stock type="username-label"/>
			</item>
			<item type="entry" id="user-entry">
				<pos anchor="cw" x="0" y="50%" height="25" width="130"/>
			</item>
			<!-- password -->
			<item type="label">
				<pos anchor="cw" x="10" y="50%"/>
				<normal color="#ffffff" font="Sans 12"/>
				<stock type="password-label"/>
			</item>
			<item type="entry" id="pw-entry">
				<pos anchor="cw" x="10" y="50%" height="25" width="130"/>
			</item>
			<!-- ok button -->
			<item type="pixmap" id="login_button" button="true">
				<pos  anchor="cw"  x="10" y="50%" width="box" height="box"/>
				<normal file="gobutton.png" />
				<prelight file="gobutton.png" tint="#90da90"/>
				<active file="gobutton.png" tint="#20d612"/>
			</item>
		</box>
	</item>
	
	<!-- userlist -->
	<item type="list" id="userlist">
		<pos anchor="nw" x="10" y="50" width="160" height="140"/>
	</item>
	
	<!-- login error -->
	<item type="label" id="pam-error">
		<pos anchor="c" x="50%" y="30%"/>
		<normal color="#ff0000" font="Sans Bold 14"/>
	</item>

	<!-- caps lock warning area -->
	<item type="rect" id="caps-lock-warning">
		<normal color="#ff0000" alpha="0.5"/>
		<pos anchor="c" x="50%" y="30%" width="box" height="box"/>
		<box orientation="vertical" min-width="90" xpadding="10" ypadding="5" spacing="0">
			<item type="label">
				<normal color="#eeeeee" font="Sans 15"/>
				<pos x="50%" anchor="n"/>
				<!-- stock label for: you've got capslock on! -->
				<stock type="caps-lock-warning"/>
			</item>
		</box>
	</item>
	
	<!-- kdm menu -->
	<item type="rect" id="kdm_menu">
		<pos x="100%" y="0%" anchor="ne" width="box" height="40" />
		<box orientation="horizontal"  spacing="5" xpadding="10">
			<!-- session menu -->
			<item type="rect" id="session_button" button="true">
				<pos y="50%" x="0" anchor="cw" width="box" height="box"/>
				<box orientation="horizontal" spacing="7" xpadding="5">
					<item type="pixmap">
						<normal file="arrow.png"/>
						<prelight file="arrow.png" tint="#90da90"/>
						<active file="arrow.png" tint="#20d612"/>
					</item>
					<item type="label">
						<pos y="50%" anchor="cw"/>
						<normal color="#eeeeee" font="Sans 13"/>
						<prelight color="#90da90" font="Sans 13"/>
						<active color="#20d612" font="Sans 13"/>
						<stock type="session"/>
					</item>
				</box>
			</item>
			<!-- System Menu -->
			<item type="rect" id="system_button" button="true">
				<pos y="50%" anchor="cw" width="box" height="box"/>
				<box orientation="horizontal" spacing="7" xpadding="10">
					<item type="pixmap">
						<normal file="arrow.png"/>
						<prelight file="arrow.png" tint="#90da90"/>
						<active file="arrow.png" tint="#20d612"/>
					</item>
					<item type="label">
						<pos y="50%" anchor="cw"/>
						<normal color="#eeeeee" font="Sans 13"/>
						<prelight color="#90da90" font="Sans 13"/>
						<active color="#20d612" font="Sans 13"/>
						<stock type="system"/>
					</item>
				</box>
			</item>
		</box>
	</item>
</greeter>

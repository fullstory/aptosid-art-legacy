<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!-- aptosid 2007-03 gaia KDM theme -->
<greeter>
	<style font="Sans 9" window-text-color="#ffffff"
	       alpha="0" base-color="#ffffff" alternate-base-color="#ffffff"
	       text-color="#000000" disabled-text-color="#808080" />
	
	<!-- background texture -->
 	<item type="pixmap" id="background"  background="true">
		<normal file="background.png"/>
		<pos anchor="nw" x="0" y="0" width="100%" height="100%"/>
	</item>
	
	<!-- aptosid logo -->
	<item type="pixmap">
		<normal file="aptosid-logo.png"/>
		<pos anchor="c" x="85%" y="15%"/>
	</item>
	
	<!-- login box background -->
	<item type="pixmap">
		<normal file="login.png"/>
		<pos anchor="c" x="50%" y="45%"/>
	</item>
	
	<item type="rect">	
		<pos anchor="c" x="50%" y="45%" width="360" height="280"/>
		<box orientation="vertical">
			<!-- welcome on ... -->
			<item type="label">
				<pos anchor="n" x="50%" y="40"/>
				<normal color="#999073" font="Verdana 18"/>
				<stock type="welcome-label"/>
			</item>
	
			<item type="label" id="clock">
				<normal color="#AFAA8E" font="Verdana 11"/>
				<pos anchor="n" x="50%" y="60"/>		
				<text>%c</text>
			</item>
			
			<item type="rect">
				<pos anchor="c" x="40%" y="120" width="box" height="box"/>
				<box orientation="horizontal">
					<!-- username-label -->
					<item type="label">
						<pos anchor="w" x="25%" y="0"/>
						<normal color="#AFAA8E" font="Verdana 12"/>
						<stock type="username-label"/>
					</item>
				
					<!-- username-entry -->
					<item type="entry" id="user-entry">
						<pos anchor="c" x="75%" y="0" height="23" width="135"/>
					</item>
				</box>
			</item>
			
			<item type="rect">
				<pos anchor="c" x="40%" y="135" width="box" height="box"/>
				<box orientation="horizontal">
					<!-- password-label -->
					<item type="label">
						<pos anchor="w" x="25%" y="0"/>
						<normal color="#AFAA8E" font="Verdana 12"/>
						<stock type="password-label"/>
					</item>
					
					<!-- password-entry -->
					<item type="entry" id="pw-entry">
						<pos anchor="c" x="75%" y="0" height="23" width="135"/>
					</item>
				</box>
			</item>
		
			<!-- capslock-warning -->
			<item type="label" id="caps-lock-warning">
				<pos anchor="c" x="50%" y="135"/>
				<normal color="#001692" font="Verdana 11"/>
				<stock type="caps-lock-warning"/>
			</item>
			
			<!-- login-error -->
			<item type="label" id="pam-error">
				<pos anchor="c" x="50%" y="135"/>
				<normal color="#a20000" font="Verdana 13"/>
			</item>
		</box>
	</item>
	
	<!-- session menu -->
	<item type="rect" id="session_button" button="true">
		<pos x="81%" y="92%" width="5%" height="10%"/>
		<box orientation="vertical">
			<item type="label">
				<pos anchor="sc" y="0" x="0%"/>
				<normal color="#DFD8AF" font="Verdana 11"/>
				<prelight color="#FFFFFF" font="Verdana 11"/>
				<active color="#000000" font="Verdana 11"/>
				<stock type="session"/>
			</item>
			<item type="pixmap">
				<pos anchor="c" y="0" x="0%"/>
				<normal file="session_normal.png"/>
				<prelight file="session_over.png"/>
				<pressed file="session_pressed.png"/>
			</item>
		</box>
	</item>
	
	<!-- system menu -->
	<item type="rect" id="system_button" button="true">
		<pos x="93%" y="92%" width="5%" height="10%"/>
		<box orientation="vertical">
			<item type="label">
				<pos anchor="sc" y="0" x="0%"/>
				<normal color="#DFD8AF" font="Verdana 11"/>
				<prelight color="#FFFFFF" font="Verdana 11"/>
				<active color="#000000" font="Verdana 11"/>
				<stock type="system"/>
			</item>
			<item type="pixmap" button="true">
				<pos anchor="c" y="0" x="0%"/>
				<normal file="system_normal.png"/>
				<prelight file="system_over.png"/>
				<pressed file="system_pressed.png"/>
			</item>
		</box>
	</item>
</greeter>

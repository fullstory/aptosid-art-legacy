<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!-- aptosid 2009-01 ouranos KDM theme -->
<greeter id="theme">
	<style font="Sans 9" window-text-color="#ffffff"
	       alpha="0" base-color="#ffffff" alternate-base-color="#ffffff"
	       text-color="#000000" disabled-text-color="#808080" />

	<!-- background texture TODO FIXME! -->
	<item type="pixmap" id="background" background="true">
		<normal file="background.png" />
		<pos anchor="c" x="50%" y="50%" width="scale" height="100%" />
	</item>
	
	<!-- aptosid logo -->
	<item type="svg" id="aptosid-logo" >
		<normal file="aptosid-logo.svg" />
		<pos anchor="w" x="55%" y="55%" width="40%" height="scale" />
	</item>

	<!-- Login Area -->
	<item type="rect" id="login-area">
		<normal color="#000000" alpha="0.6" />
		<pos x="0" y="0" anchor="nw" width="45%" height="100%" />

		<box orientation="vertical">
			<!-- Welcome message box -->
			<item type="rect" id="welcome-box">
				<pos anchor="n" x="50%" y="0" width="100%" height="40%^^" />
				<!-- normal color="#ff0000" alpha="0.6" / -->
				<box orientation="vertical">
					<!-- Welcome to ... -->
					<item type="label">
						<pos anchor="n" x="50%" y="200%" />
						<normal color="#ffffff" font="Verdana 18" />
						<stock type="welcome-label" />
					</item>
					<!-- Clock & Date -->
					<item type="label" id="clock">
						<pos anchor="n" x="50%" y="400%" />
						<normal color="#ffffff" font="Sans 15" />
						<text>%c</text>
					</item>
				</box>
			</item>
		
			<!-- Login Fields -->
			<item type="rect" id="login-fields">
				<pos anchor="nw" width="100%" height="box" />
				<!-- normal color="#000000" alpha="0.6" / -->
				
				<box orientation="horizontal" spacing="40">
					<item type="rect" id="userListWrapper">
						<pos anchor="nw" width="50%^" height="box" />
						<!-- normal color="#00ff00" alpha="0.6" / -->
						<box orientation="vertical">
							<item type="list" id="userlist">
								<pos anchor="n" x="50%" width="160" height="200"/>
							</item>
						</box>
					</item>
				
					<item type="rect" id="textFieldsWrapper">
						<pos anchor="nw" width="50%^" height="box" />
						<!-- normal color="#0000ff" alpha="0.6" / -->
						<box orientation="vertical" spacing="10" xpadding="10" ypadding="5">
							<pos anchor="c" y="50%" />
							
							<!-- Caps Lock Warning -->
							<item type="rect" id="caps-lock-warning">
								<normal color="#ff0000" alpha="0.5" />
								<pos anchor="n" x="50%" width="box" height="box"/>
								<box orientation="vertical" min-width="90" xpadding="10" ypadding="5" spacing="0">
									<item type="label">
										<normal color="#eeeeee" font="Sans 15"/>
										<pos x="50%" anchor="n"/>
										<!-- Stock label for: You've got capslock on! -->
										<stock type="caps-lock-warning"/>
									</item>
								</box>
							</item>
							
							<!-- Login error -->
							<item type="label" id="pam-error">
								<pos anchor="nw" />
								<normal color="#ff0000" font="Sans Bold 14"/>
								<!-- text></text -->
							</item>

							
							<!-- User Name-->
							<item type="label">
								<pos anchor="cw" y="50%" />
								<normal color="#ffffff" font="Sans 12" />
								<stock type="username-label" />
							</item>
							<item type="entry" id="user-entry">
								<pos anchor="cw" x="0" y="50%" height="25" width="130" />
							</item>

							<!-- Password-->
							<item type="label">
								<pos anchor="cw" x="0" y="50%" />
								<normal color="#ffffff" font="Sans 12" />
								<stock type="password-label" />
							</item>
							<item type="rect">
								<pos anchor="cw" x="0" y="50%" width="box" height="box" />
								<box orientation="horizontal" spacing="5" xpadding="1">
									<pos anchor="w" x="0" y="50%" />
									<item type="entry" id="pw-entry">
										<pos anchor="cw" x="0" y="50%" height="25" width="130" />
									</item>
									<!-- OK Button -->
									<item type="svg" id="login_button" button="true">
										<pos width="32" height="32" />
										<normal file="gobutton.svg" />
										<prelight file="gobutton.svg" tint="#90da90" />
										<active file="gobutton.svg" tint="#20d612" />
									</item>
								</box>
							</item>
							
							<!-- Session Menu -->
							<item type="rect" id="session_button" button="true">
								<pos anchor="nw" x="0" width="box" height="box" />
								<box orientation="horizontal" spacing="3" xpadding="10">
									<item type="svg">
										<pos width="32" height="32" />
										<normal file="arrow.svg" />
										<prelight file="arrow.svg" tint="#90da90" />
										<active file="arrow.svg" tint="#20d612" />
									</item>
									<item type="label">
										<normal color="#eeeeee" font="Sans 13" />
										<prelight color="#90da90" font="Sans 13" />
										<active color="#20d612" font="Sans 13" />
										<pos y="50%" anchor="w" />
										<stock type="session" />
									</item>
								</box>
							</item>

							<!-- System Menu -->
							<item type="rect" id="system_button" button="true">
								<pos anchor="nw" x="0" width="box" height="box" />
								<box orientation="horizontal" spacing="7" xpadding="10">
									<item type="svg">
										<pos width="32" height="32" />
										<normal file="arrow.svg" />
										<prelight file="arrow.svg" tint="#90da90" />
										<active file="arrow.svg" tint="#20d612" />
									</item>
									<item type="label">
										<pos y="50%" anchor="cw" />
										<normal color="#eeeeee" font="Sans 13" />
										<prelight color="#90da90" font="Sans 13" />
										<active color="#20d612" font="Sans 13" />
										<stock type="system" />
									</item>
								</box>
							</item>
							
						</box>
					</item>
				</box>
			</item>
			
		</box>
	</item>
</greeter>

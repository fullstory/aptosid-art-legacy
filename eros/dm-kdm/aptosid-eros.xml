<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<!-- aptosid 2007-04 eros KDM theme -->
<greeter>
	<style font="Sans 9" window-text-color="#ffffff"
	       alpha="0" base-color="#ffffff" alternate-base-color="#ffffff"
	       text-color="#000000" disabled-text-color="#808080" />
	
	<!-- background texture -->
 	<item type="pixmap" id="background"  background="true">
		<normal file="background.png"/>
		<pos anchor="nw" x="0" y="0" width="100%" height="100%"/>
	</item>
	
	<!-- aptosid logo -->
	<item type="pixmap">
		<normal file="aptosid-logo.png"/>
		<pos anchor="ce" x="95%" y="85%"/>
	</item>
	
	<!-- login box background -->
	<item type="pixmap">
		<normal file="login.png"/>
		<pos anchor="c" x="50%" y="45%"/>
	</item>
	
	<item type="rect">		
		<pos anchor="c" x="50%" y="45%" width="700" height="500"/>
		<box orientation="vertical">
		
			<!-- welcome on ... -->
			<item type="label">
				<pos anchor="c" x="50%" y="120"/>
				<normal color="#FFFFFF" font="Verdana 18"/>
				<stock type="welcome-label"/>
			</item>
	
			<item type="label" id="clock">
				<normal color="#FFFFFF" font="Verdana 11"/>
				<pos anchor="c" x="50%" y="130"/>		
				<text>%c</text>
			</item>
		
			<!-- username-label -->
			<item type="label">
				<pos anchor="w" x="310" y="155"/>
				<normal color="#FFFFFF" font="Verdana 12"/>
				<stock type="username-label"/>
			</item>
			
			<!-- password-label -->
			<item type="label">
				<pos anchor="w" x="310" y="180"/>
				<normal color="#FFFFFF" font="Verdana 12"/>
				<stock type="password-label"/>
			</item>
				
			<!-- username-entry -->
			<item type="entry" id="user-entry">
				<pos anchor="c" x="480" y="120" height="23" width="135"/>
			</item>
			
			<!-- password-entry -->
			<item type="entry" id="pw-entry">
				<pos anchor="c" x="480" y="140" height="23" width="135"/>
			</item>
			
			<!-- userlist -->
			<item type="list" id="userlist">
				<pos anchor="c" x="190" y="150" width="170" height="170"/>
			</item>
			
			<!-- system menu -->
			<item type="rect" id="system_button" button="true">
				<pos anchor="c" x="360" y="40" width="box" height="box"/>
				<box orientation="horizontal" spacing="0" xpadding="0">
					<item type="pixmap">
						<pos anchor="c" y="0" x="7"/>
						<normal file="system.png" tint="dddddd"/>
						<prelight file="system.png"/>
						<pressed file="system.png" tint="bbbbbb"/>
					</item>				 
					<item type="label">
						<normal color="#FFFFFF" font="Verdana 11"/>
						<prelight color="#DFD8AF" font="Verdana 11"/>
						<active color="#000000" font="Verdana 11"/>
						<pos anchor="e" y="0" x="25"/>
						<stock type="system"/>
					</item>
				</box>
			</item>
			
			<!-- session menu -->
			<item type="rect" id="session_button" button="true">
				<pos anchor="c" x="480" y="0" width="box" height="box"/>
				<box orientation="horizontal" spacing="0" xpadding="0">
					<item type="pixmap">
						<pos anchor="c" y="10" x="3"/>
						<normal file="session.png" tint="#dddddd"/>
						<prelight file="session.png"/>
						<pressed file="session.png" tint="#bbbbbb"/>
					</item> 				
					<item type="label">
						<normal color="#FFFFFF" font="Verdana 11"/>
						<prelight color="#DFD8AF" font="Verdana 11"/>
						<active color="#000000" font="Verdana 11"/>
						<pos anchor="e" y="10" x="70"/>
						<stock type="session"/>
					</item>
				</box>
			</item>
			
			<!-- Login-Error -->
			<item type="label" id="pam-error">
				<pos anchor="sc" x="65%" y="-90"/>
				<normal color="#ffffff" font="Verdana 13"/>
			</item>
		
			<!-- capslock-warning -->
			<item type="label" id="caps-lock-warning">
				<pos anchor="sc" x="65%" y="-80"/>
				<normal color="#ff3c00" font="Verdana 13"/>
				<stock type="caps-lock-warning"/>
			</item>
		</box>
	</item>
</greeter>
